<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Inbox | Email Application</title>
		<%- include('components/meta') %> <%- include('components/link') %>
	</head>

	<body>
		<div class="wrapper">
			<div
				class="sidebar"
				data-background-color="brown"
				data-active-color="danger"
			>
				<!--
			Tip 1: you can change the color of the sidebar's background using: data-background-color="white | brown"
			Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
		-->
				<div class="logo">
					<a href="/" class="simple-text logo-mini">
						EA
					</a>
					<a href="/" class="simple-text logo-normal">
						Email Application
					</a>
				</div>
				<div class="sidebar-wrapper">
					<div class="user">
						<div class="info">
							<a
								data-toggle="collapse"
								href="#collapseExample"
								class="collapsed"
							>
								<span>
									<%- user.name -%> <br> <%- user.email -%>
									<b class="caret"></b>
								</span>
							</a>
							<div class="clearfix"></div>

							<div class="collapse" id="collapseExample">
								<ul class="nav">
									<li>
										<a href="/userProfile">
											<span class="sidebar-mini">Ep</span>
											<span class="sidebar-normal"
												>Edit Profile</span
											>
										</a>
									</li>
									<li>
										<a href="/signOut">
											<span class="sidebar-mini">S</span>
											<span class="sidebar-normal"
												>Sign Out</span
											>
										</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
					<ul class="nav">
						<li>
							<a data-toggle="collapse" href="#contactsDashboard">
								<i class="ti-panel"></i>
								<p>
									Dashboard
									<b class="caret"></b>
								</p>
							</a>
							<div class="collapse" id="contactsDashboard">
								<ul class="nav">
									<li>
										<a href="/inbox">
											<span class="sidebar-mini">D</span>
											<span class="sidebar-normal"
												>Dashboard</span
											>
										</a>
									</li>
								</ul>
							</div>
						</li>
						<li>
							<a data-toggle="collapse" href="#contactsEmail">
								<i class="ti-panel"></i>
								<p>
									Email
									<b class="caret"></b>
								</p>
							</a>
							<div class="collapse" id="contactsEmail">
								<ul class="nav">
									<li>
										<a href="/composeEmail">
											<span class="sidebar-mini">SE</span>
											<span class="sidebar-normal"
												>Send Email</span
											>
										</a>
									</li>
									<li>
										<a href="/sentEmails">
											<span class="sidebar-mini">SE</span>
											<span class="sidebar-normal"
												>Sent Emails</span
											>
										</a>
									</li>
									<li>
										<a href="/draftedEmails">
											<span class="sidebar-mini">SE</span>
											<span class="sidebar-normal"
												>Drafted Emails</span
											>
										</a>
									</li>
								</ul>
							</div>
						</li>
						<li>
							<a data-toggle="collapse" href="#contactsContacts">
								<i class="ti-panel"></i>
								<p>
									Contacts
									<b class="caret"></b>
								</p>
							</a>
							<div class="collapse" id="contactsContacts">
								<ul class="nav">
									<li>
										<a href="/addContact">
											<span class="sidebar-mini">AC</span>
											<span class="sidebar-normal"
												>Add Contacts</span
											>
										</a>
									</li>
									<li>
										<a href="/contacts">
											<span class="sidebar-mini">VC</span>
											<span class="sidebar-normal"
												>View contacts</span
											>
										</a>
									</li>
								</ul>
							</div>
						</li>
					</ul>
				</div>
			</div>

			<div class="main-panel">
				<nav class="navbar navbar-default">
					<div class="container-fluid">
						<div class="navbar-minimize">
							<button
								id="minimizeSidebar"
								class="btn btn-fill btn-icon"
							>
								<i class="ti-more-alt"></i>
							</button>
						</div>
						<div class="navbar-header">
							<button type="button" class="navbar-toggle">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar bar1"></span>
								<span class="icon-bar bar2"></span>
								<span class="icon-bar bar3"></span>
							</button>
							<a class="navbar-brand" href="#datatable"
								>Dashboard</a
							>
						</div>
						<div class="collapse navbar-collapse">
							<ul class="nav navbar-nav navbar-right">
								<li>
									<a href="/signOut">
										Sign Out
									</a>
								</li>
							</ul>
						</div>
					</div>
				</nav>

				<div class="content">
					<div class="container-fluid">
						<div class="row">
							<div class="col-md-12">
								<div class="card">
									<div class="card-content">
										<div class="toolbar">
											<!--Here you can write extra buttons/actions for the toolbar-->
										</div>
										<div class="fresh-datatables">
											<table
												id="datatables"
												class="table table-striped table-no-bordered table-hover"
												cellspacing="0"
												width="100%"
												style="width: 100%;"
											>
												<thead>
													<tr>
														<th>Email Address</th>
														<th>Subject</th>
														<th>Date</th>
														<th
															class="disabled-sorting"
														>
															Actions
														</th>
													</tr>
												</thead>
												<tfoot>
													<tr>
														<th>Email Address</th>
														<th>Subject</th>
														<th>Date</th>
														<th>Actions</th>
													</tr>
												</tfoot>
												<tbody>
													<%-
													include('showInboxEmails')
													%>
												</tbody>
											</table>
										</div>
									</div>
								</div>
								<!--  end card  -->
							</div>
							<!-- end col-md-12 -->
						</div>
						<!-- end row -->
					</div>
				</div>
				<%- include('components/footer') %>
			</div>
		</div>
		<%- include('components/scripts') %>
		<script type="text/javascript">
			$(document).ready(function () {
				$("#datatables").DataTable({
					pagingType: "full_numbers",
					lengthMenu: [
						[10, 25, 50, -1],
						[10, 25, 50, "All"],
					],
					responsive: true,
					language: {
						search: "_INPUT_",
						searchPlaceholder: "Search records",
					},
				});

				var table = $("#datatables").DataTable();
			});
		</script>
	</body>
</html>
