	                        <div class="card">
	                            <div class="card-header">
	                                <h4 class="card-title">Edit Profile</h4>
	                            </div>
	                            <div class="card-content">
	                                <form method="POST" action="/onUpdateProfile">
	                                    <div class="row">
	                                        <div class="col-md-6">
	                                            <div class="form-group">
	                                                <label>Date of Birth</label>
													<input type="date" name="DOB" class="form-control border-input" autocomplete="bday">
	                                            </div>
	                                        </div>
	                                        <div class="col-md-6">
	                                            <div class="form-group">
	                                                <label>Profile Picture</label>
	                                                <input type="file" name="profilePicture" autocomplete="photo" class="form-control border-input" disabled>
	                                            </div>
	                                        </div>
										</div>
										<div class="row">
											<div class="col-md-6">
	                                            <div class="form-group">
	                                                <label>Country Code</label>
													<input type="tel" name="countryCode" class="form-control border-input" autocomplete="tel-country-code">
	                                            </div>
	                                        </div>
	                                        <div class="col-md-6">
	                                            <div class="form-group">
	                                                <label>Mobile number</label>
													<input type="tel" name="mobile" class="form-control border-input" autocomplete="tel-national">
	                                            </div>
	                                        </div>
	                                    </div>
	                                    <div class="row">
	                                        <div class="col-md-6">
	                                            <div class="form-group">
	                                                <label>First Name</label>
	                                                <input type="text" class="form-control border-input" placeholder="First Name" name="firstName" autocomplete="given-name">
	                                            </div>
	                                        </div>
	                                        <div class="col-md-6">
	                                            <div class="form-group">
	                                                <label>Last Name</label>
	                                                <input type="text" class="form-control border-input" placeholder="Last Name" name="lastName" autocomplete="family-name">
	                                            </div>
	                                        </div>
	                                    </div>
	                                    <div class="row">
	                                        <div class="col-md-12">
	                                            <div class="form-group">
	                                                <label>Address Line 1</label>
	                                                <input type="text" class="form-control border-input" name="address1" placeholder="Address Line 1" autocomplete="address-line1">
	                                            </div>
	                                        </div>
	                                    </div>
	                                    <div class="row">
	                                        <div class="col-md-12">
	                                            <div class="form-group">
	                                                <label>Address Line 2</label>
	                                                <input type="text" class="form-control border-input" name="address2"  placeholder="Address Line 2" autocomplete="address-line2">
	                                            </div>
	                                        </div>
	                                    </div>
	                                    <div class="row">
	                                        <div class="col-md-4">
	                                            <div class="form-group">
	                                                <label>City</label>
	                                                <input type="text" class="form-control border-input" name="city" placeholder="City" autocomplete="address-level2">
	                                            </div>
	                                        </div>
	                                        <div class="col-md-4">
	                                            <div class="form-group">
	                                                <label>Country</label>
	                                                <input type="text" name="country" class="form-control border-input" placeholder="Country" autocomplete="country-name">
	                                            </div>
	                                        </div>
	                                        <div class="col-md-4">
	                                            <div class="form-group">
	                                                <label>Postal Code</label>
	                                                <input type="text" name="postalCode" class="form-control border-input" placeholder="Postal Code" autocomplete="postal-code">
	                                            </div>
	                                        </div>
	                                    </div>
	                                    <div class="row">
	                                        <div class="col-md-12">
	                                            <div class="form-group">
	                                                <label>About Me</label>
	                                                <textarea rows="3" class="form-control border-input" placeholder="Here can be your description" name="bio">
													</textarea>
	                                            </div>
	                                        </div>
	                                    </div>
	                                    <div class="text-center">
	                                        <button type="submit" class="btn btn-info btn-fill btn-wd">Update Profile</button>
	                                    </div>
	                                    <div class="clearfix"></div>
	                                </form >
