<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Update Profile | Email Application</title>
		<%- include('components/meta') %> <%- include('components/link') %>
	</head>

	<body>
		<div class="wrapper">
			<%- include('components/sidebar') %>
			<div class="main-panel">
				<nav class="navbar navbar-default">
					<div class="container-fluid">
						<div class="navbar-minimize">
							<button
								id="minimizeSidebar"
								class="btn btn-fill btn-icon"
							>
								<i class="ti-more-alt"></i>
							</button>
						</div>
						<div class="navbar-header">
							<button type="button" class="navbar-toggle">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar bar1"></span>
								<span class="icon-bar bar2"></span>
								<span class="icon-bar bar3"></span>
							</button>
							<a class="navbar-brand" href="/updateProfile"
								>Update your profile to continue</a
							>
						</div>
					</div>
				</nav>

				<div class="content">
					<div class="container-fluid">
						<div class="row">
							<div class="col-lg-12 col-md-12">
								<div class="card">
									<div class="card-content">
										<form
											method="POST"
											action="/onUpdateProfile"
										>
											<div class="row">
												<div class="col-md-4">
													<div class="form-group">
														<label for="DOB"
															>Date of
															Birth</label
														>
														<input
															id="DOB"
															type="date"
															name="DOB"
															class="form-control border-input"
															autocomplete="bday"
															required
															autofocus
														/>
													</div>
												</div>
												<div class="col-md-4">
													<div class="form-group">
														<label for="countryCode"
															>Country Code</label
														>
														<input
															id="countryCode"
															type="tel"
															name="countryCode"
															class="form-control border-input"
															autocomplete="tel-country-code"
															placeholder="Country Code"
															pattern="^\+\d{1,3}$"
															title="Should begin with + and must be a country code"
															required
														/>
													</div>
												</div>
												<div class="col-md-4">
													<div class="form-group">
														<label for="mobile"
															>Mobile
															number</label
														>
														<input
															id="mobile"
															type="tel"
															name="mobile"
															class="form-control border-input"
															autocomplete="tel-national"
															placeholder="Mobile number"
															pattern="^[6-9]\d{9}$"
															title="10 digit mobile number"
															required
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label for="firstName"
															>First Name</label
														>
														<input
															id="firstName"
															type="text"
															class="form-control border-input"
															placeholder="First Name"
															name="firstName"
															autocomplete="given-name"
															required
														/>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label for="lastName"
															>Last Name</label
														>
														<input
															id="lastName"
															type="text"
															class="form-control border-input"
															placeholder="Last Name"
															name="lastName"
															autocomplete="family-name"
															required
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="address1"
															>Address Line
															1</label
														>
														<input
															id="address1"
															type="text"
															class="form-control border-input"
															name="address1"
															placeholder="Address Line 1"
															autocomplete="address-line1"
															required
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="address2"
															>Address Line
															2</label
														>
														<input
															id="address2"
															type="text"
															class="form-control border-input"
															name="address2"
															placeholder="Address Line 2"
															autocomplete="address-line2"
															required
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-4">
													<div class="form-group">
														<label for="city"
															>City</label
														>
														<input
															id="city"
															type="text"
															class="form-control border-input"
															name="city"
															placeholder="City"
															autocomplete="address-level2"
															required
														/>
													</div>
												</div>
												<div class="col-md-4">
													<div class="form-group">
														<label for="country"
															>Country</label
														>
														<input
															id="country"
															type="text"
															name="country"
															class="form-control border-input"
															placeholder="Country"
															autocomplete="country-name"
															required
														/>
													</div>
												</div>
												<div class="col-md-4">
													<div class="form-group">
														<label for="postalCode"
															>Postal Code</label
														>
														<input
															id="postalCode"
															type="text"
															name="postalCode"
															class="form-control border-input"
															placeholder="Postal Code"
															autocomplete="postal-code"
															pattern="^[0-9]{6}$"
															required
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="bio"
															>About Me</label
														>
														<input
															id="bio"
															type="text"
															class="form-control border-input"
															placeholder="Here can be your description"
															name="bio"
														/>
													</div>
												</div>
											</div>
											<div class="text-center">
												<button
													type="submit"
													class="btn btn-info btn-fill btn-wd"
												>
													Update Profile
												</button>
											</div>
											<div class="clearfix"></div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<%- include('components/footer') %>
			</div>
		</div>
		<%- include('components/scripts') %>
		<script>
			var date = new Date();
			var DD = (date.getDate() < 10 ? "0" : "") + date.getDate();
			var MM =
				(date.getMonth() + 1 < 10 ? "0" : "") + (date.getMonth() + 1);
			var YYYY = date.getFullYear();
			document.getElementById("DOB").min =
				YYYY - 100 + "-" + MM + "-" + DD;
			document.getElementById("DOB").max =
				YYYY - 13 + "-" + MM + "-" + DD;
		</script>
	</body>
</html>
